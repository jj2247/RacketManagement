@model IEnumerable<RacketManagement.Models.Racket>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GripSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Brand.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GripSize.size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model.name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RacketID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RacketID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RacketID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
